<aura:component controller="CampingListController">
  <aura:attribute
    name="newItem"
    type="Camping_Item__c"
    required="false"
    default="{'sObjectType':'Camping_Item__c','Quantity__c':0,'Price__c':0}"
  />
  <aura:registerEvent type="c:addItemEvent" name="addItem" />
  <lightning:layout>
    <lightning:layoutItem padding="around-small" size="6">
      <fieldset class="slds-box slds-theme--default slds-container--small">
        <legend
          id="newCampingItemForm"
          class="slds-text-heading--small 
                slds-p-vertical--medium"
        >
          Add Camping Line Item
        </legend>
        <form>
          <lightning:input
            aura:id="campingItem"
            label="Camping Item Name"
            name="campingItemName"
            value="{!v.newItem.Name}"
            required="true"
          />
          <lightning:input
            type="number"
            aura:id="campingItem"
            label="Price"
            name="itemPrice"
            min="0.1"
            formatter="currency"
            step="0.01"
            value="{!v.newItem.Price__c}"
            messageWhenRangeUnderflow="Enter an amount that's at least $0.10."
          />
          <lightning:input
            type="number"
            name="itemQuantity"
            label="Quantity"
            aura:id="campingItem"
            value="{!v.newItem.Quantity__c}"
            min="1"
          />
          <lightning:input
            type="checkbox"
            label="Packed"
            name="packed"
            value="{!v.newItem.Packed__c}"
            aura:id="campingItem"
            checked="{!v.newItem.Packed__c}"
          />
          <lightning:button
            label="Create Camping Item"
            class="slds-m-top--medium"
            variant="brand"
            onclick="{!c.clickCreateItem}"
          />
        </form>
      </fieldset>
    </lightning:layoutItem>
  </lightning:layout>
</aura:component>
